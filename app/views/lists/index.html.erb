


<div class="usercontent">
    <h1 class ="color">Check out your monthly budget lists!</h1>


    <%= render 'form' %>


    <ul class="color" id="size">
        <% @lists.each do |list, transaction| %>
            <li><%= list.name %>
            <%= link_to 'Show', list %>
            <%= link_to 'Edit', edit_list_path(list) %>
            <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <% end %>
    </ul>


    <%= link_to 'Add a list', new_list_path %>

</div>


<div class="userpage"></div>
